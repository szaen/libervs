Sub CopiarBasesParaNTF
    Dim sessao As New NotesSession
    Dim servidorBanco As String
    Dim diretorioBanco As String
    Dim copyDirectory As String
    
    servidorBanco = "NomeDoServidor" ' Substitua pelo nome do servidor
    diretorioBanco = "C:\Caminho\Para\As\Bases" ' Substitua pelo diret처rio das bases de dados
    copyDirectory = "C:\Caminho\Para\Destino" ' Substitua pelo diret처rio de destino das c처pias
    
    Dim dir As String
    dir = Dir$(diretorioBanco & "\*.nsf")
    
    Do While dir <> ""
        Dim bancoDados As NotesDatabase
        Set bancoDados = sessao.GetDatabase(servidorBanco, diretorioBanco & "\" & dir, False)
        
        If Not bancoDados Is Nothing Then
            Dim nomeArquivo As String
            nomeArquivo = Left$(dir, Len(dir) - 4) ' Remove a extens찾o .nsf
            
            Dim caminhoDestino As String
            caminhoDestino = copyDirectory & "\" & nomeArquivo & ".ntf"
            
            Call bancoDados.CreateCopy("", caminhoDestino)
            
            MsgBox "Base " & dir & " copiada para " & caminhoDestino
        End If
        
        dir = Dir$
    Loop
End Sub
